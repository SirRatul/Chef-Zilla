
@{
    ViewBag.Title = "ViewCart";
}


@Html.Partial("~/Views/Shared/_NavBar.cshtml")

<h2 class="ml-10">Cart</h2>

@{var totalProductPrice = 0;}

@if (TempData["message"] != null)
{
    <div id="infoValidationSummary" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@TempData["message"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}



<div class="row col-12 justify-content-center">

    <div class="row col-10 justify-content-center">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">Selected Food</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>

                </tr>
            </thead>
        </table>

    </div>

    <div class="row col-10 text-center justify-content-center">


        @for (var i = 0; i < @Model.ProductID.Count; i++)
        {

            @*
               <a href="@Url.Action("Index", "FeaturedItem", new { id = Model.ProductID[i] })">
                <h4> @Model.ProductID[i]</h4>
            </a>
            *@


            <div class="row col-12">


                <div style="">
                    <a href="@Url.Action("Delete", "Cart", new { cId = @Model.CartID[i] })" style="color:red; margin-top:10px;">
                        <i class="fas fa-times-circle text-danger"></i>
                    </a>
                </div>




                <div class="row col-5 ml-3">
                    <a href="@Url.Action("Index", "FeaturedItem", new { id = Model.ProductID[i] })">
                        <h4 class="ml-5 font-weight-bold"> @Model.ProductName[i]</h4>
                    </a>


                </div>
                <div class="row col-3 justify-content-center" style="margin-left:5px;">

                    <h4 class="ml-5 font-weight-bold"> @Model.ProductQuantity[i]</h4>




                </div>


                <div class="row col-3 justify-content-center" style="margin-left:10px;">
                    <h4 class="ml-5 font-weight-bold"> @Model.TotalPrice[i]</h4>
                </div>
                @{totalProductPrice = totalProductPrice + Model.TotalPrice[i];
                }

            </div>

        }

        <div />

        <br />
        <br />

        <h3>Total price = @totalProductPrice</h3>




        <div class="row justify-content-center">
            <a href="@Url.Action("Index", "FeaturedItem")">
                <input type="submit" value="Continue" class="buttonCss" />


            </a>
        </div>
        <br />

    </div>

    

</div>

