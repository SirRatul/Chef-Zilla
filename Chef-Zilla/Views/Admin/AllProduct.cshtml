
@{
    ViewBag.Title = "AllProduct";
}

<h2>AllProduct</h2>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12 mx-auto">
                <h1>DataTables</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @if (TempData["message"] != null)
                {
                    <div id="infoValidationSummary" class="modal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>@TempData["message"]</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Serial No</th>
                                    <th>Product Type</th>
                                    <th>Product Name</th>
                                    <th>Prepare Time</th>
                                    <th>Product Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < @Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
                                        <td>@Model[i].ProductType</td>
                                        <td>@Model[i].ProductName</td>
                                        <td>@Model[i].PrepareTime</td>
                                        <td>@Model[i].ProductPrice</td>
                                        <td>
                                            <a href="@Url.Action("ViewProduct", "Admin", new { id = Model[i].ProductID })" className="btn btn-success">
                                                <i class="fas fa-eye text-success"></i>
                                            </a>
                                            <a href="@Url.Action("EditProduct", "Admin", new { id = Model[i].ProductID })" className="btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteProduct", "Admin", new { id = Model[i].ProductID })" className="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">
                                                <i class="fas fa-times-circle text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
            if ("@TempData["message"]" != null) {
                $('#infoValidationSummary').modal('show');
            }
        });
    </script>
}