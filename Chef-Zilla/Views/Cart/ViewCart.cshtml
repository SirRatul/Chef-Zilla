
@{
    ViewBag.Title = "ViewCart";
}


@Html.Partial("~/Views/Shared/_NavBar.cshtml")

<h2 class="ml-10">Cart</h2>

@{var totalProductPrice = 0;}

@if (TempData["message"] != null)
{
    <div id="infoValidationSummary" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@TempData["message"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}



<div class="row col-12 justify-content-center">

    <div class="row col-8 justify-content-center">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">Selected Food</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>

                </tr>
            </thead>
        </table>

    </div>

    <div class="row col-10 text-center justify-content-center">


        @for (var i = 0; i < @Model.ProductID.Count; i++)
        {

            @*
               <a href="@Url.Action("Index", "FeaturedItem", new { id = Model.ProductID[i] })">
                <h4> @Model.ProductID[i]</h4>
            </a>
            *@


            <div class="row col-12">


                <div style="">
                    <a href="@Url.Action("Delete", "Cart", new { cId = @Model.CartID[i] })" style="color:red; margin-top:3px; margin-left:5px;">
                        <span aria-hidden="true">&times;</span>
                    </a>
                </div>




                <div class="row col-5 ml-3">
                    <a href="@Url.Action("Index", "FeaturedItem", new { id = Model.ProductID[i] })">
                        <h4 class="ml-5 font-weight-bold"> @Model.ProductName[i]</h4>


                    </a>


                </div>
                <div class="row col-3" style="margin-left:5px;">

                    <h4 class="ml-5 font-weight-bold"> @Model.ProductQuantity[i]</h4>




                </div>


                <div class="row col-3" style="margin-left:10px;">
                    <h4 class="ml-5 font-weight-bold"> @Model.TotalPrice[i]</h4>
                </div>
                @{totalProductPrice = totalProductPrice + Model.TotalPrice[i];
                }

            </div>

        }

        <div />

        <br />
        <br />

        <h3>Total price = @totalProductPrice</h3>




        <div class="row justify-content-center">
            <a href="@Url.Action("Index", "FeaturedItem")">
                <input type="submit" value="Continue" class="buttonCss" />


            </a>
        </div>
        <br />

    </div>

    

</div>

<div class="row col-md-12 text-center justify-content-center">

    <div class="col-md-8">
        @* code for add to cart*@
        @using (Html.BeginForm("Index", "Order", FormMethod.Post))
        {
        <div class="row">

            
            <div class="col-md-6" style="float:left;">

                @Html.AntiForgeryToken()
                @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                {
                    <div class="row">
                        <div class="col-12 mb-2">
                            <div class="alert alert-warning alert-dismissible show" role="alert">
                                @Html.ValidationSummary(true, "")
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <label for="Name">Name</label>
                <input type="text" class="form-control" id="name" name="Name" value="@Model.Name" readonly="readonly" />

                <label for="phoNo">Phone Number</label>
                <input type="text" class="form-control" id="phnNo" name="PhnNo" value="@Model.PhnNo" readonly="readonly" />

                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" name="email" value="@Model.Email" readonly="readonly" />

                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" required />

                <label for="dateTime">DateTime</label>
                <input type="text" class="form-control" id="dateTime" name="dateTime" value="@DateTime.Now.ToString("dd/MM/yyyy hh:mm tt")" placeholder="@DateTime.Now.ToString("dd/MM/yyyy hh:mm tt")" />


                @for (var i = 0; i < @Model.ProductID.Count; i++)
                {
                    <input type="text" class="form-control" id="ProductID" name="ProductID" value="@Model.ProductID[i]" required />
                    <input type="text" class="form-control" id="ProductQuantity" name="ProductQuantity" value="@Model.ProductQuantity[i]" required />
                    <input type="text" class="form-control" id="TotalPrice" name="TotalPrice" value="@Model.TotalPrice[i]" required />
                }

            </div>

            <br />
            <br />
            <br />

            <div class="col-md-6" style="float:right;">

                @{
                    var totalItem = Model.ProductID.Count;

                }

                <label for="totalItem">Total Item</label>
                <input type="text" class="form-control" id="totalItem" name="TotalItem" value="@totalItem" readonly="readonly" />

                <label for="shippingCrg">Shipping charge</label>
                <input type="number" class="form-control" id="shippingCrg" name="shippingCharge" value="60" readonly="readonly" />

                <label for="voucher">voucher</label>
                <input type="text" class="form-control" id="voucher" name="voucher" value="50" />

                <br />
                <br />
                @{int finalTotalPrice = totalProductPrice - 50;}
                <h4 style="float:left">
                    Final total price = {@finalTotalPrice}
                </h4>
                <input type="text" class="form-control" id="finalTotalPrice" name="finalTotalPrice" value="@finalTotalPrice" />
            </div>

            <br />
            <br />

            <div class="row col-md-12 justify-content-center">


                <a href="@Url.Action("Index", "Order")">
                    <input type="submit" value="Proceed To Pay" class="buttonCss" />

                </a>



            </div>
        </div>
        }



    </div>

</div>






